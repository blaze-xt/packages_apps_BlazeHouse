<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/blazehouse_title" >

        <!-- Theme Room -->
        <Preference
            android:key="theme_category"
            android:title="@string/theme_title"
            android:fragment="com.blaze.house.categories.ThemesSettings"
            android:icon="@drawable/ic_settings_theme"/>
        
        <!-- Status Bar -->
        <PreferenceScreen
            android:key="statusbar_category"
            android:title="@string/statusbar_title"
            android:fragment="com.blaze.house.categories.StatusBarSettings" 
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Quick Settings panel -->
        <PreferenceScreen
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
            android:fragment="com.blaze.house.categories.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Buttons -->
        <PreferenceScreen
            android:key="buttonsettings_category"
            android:title="@string/button_title"
            android:fragment="com.blaze.house.categories.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"/>

        <!-- Gestures -->
        <PreferenceScreen
            android:key="gestures_category"
            android:title="@string/gestures_title" 
            android:fragment="com.blaze.house.categories.GestureSettings"
            android:icon="@drawable/ic_settings_gestures"/>

        <!-- Lock Screen -->
        <PreferenceScreen
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.blaze.house.categories.LockScreenSettings"
            android:icon="@drawable/ic_settings_lockscreens"/>

        <!-- Notifications -->
        <PreferenceScreen
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:fragment="com.blaze.house.categories.NotificationSettings"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- system -->
        <PreferenceScreen
            android:key="system_category"
            android:title="@string/system_title" 
            android:fragment="com.blaze.house.categories.SystemSettings"
            android:icon="@drawable/ic_settings_system"/>

</PreferenceScreen>
